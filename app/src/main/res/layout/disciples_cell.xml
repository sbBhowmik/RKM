<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#f2d1ae"
    >

    <ImageView
        android:id="@+id/discipleImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/swamiji"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:scaleType="fitCenter"
        />

    <TextView
        android:id="@+id/discipleNameTV"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:text="Swami Vivekananda"
        android:fontFamily="sans-serif-smallcaps"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="#FFa35400"
        android:layout_toRightOf="@+id/discipleImageView"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/discipleImageView"
        android:background="#FF000000"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_menu_send"

        android:layout_alignTop="@+id/discipleImageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="36dp"
        android:layout_marginRight="20dp"
        />

</RelativeLayout>